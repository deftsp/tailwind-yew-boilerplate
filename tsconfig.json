{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
